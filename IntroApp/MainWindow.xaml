<Window x:Class="IntroApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntroApp"
        mc:Ignorable="d"
        Loaded="Window_Loaded" PreviewKeyDown="main_PreviewKeyDown"
        WindowStyle="None" Background="Black" Foreground="White" ShowInTaskbar="false" Topmost="true"
        ResizeMode="NoResize" WindowState="Maximized" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="450" Width="800" Cursor="None">
    <Grid Cursor="None" PreviewKeyDown="video_PreviewKeyDown">
        <MediaElement Loaded="video_Loaded" MediaEnded="MediaElement_MediaEnded" x:Name="video" Stretch="Uniform"
                  Volume="1" Cursor="None"/>
    </Grid>
</Window>
